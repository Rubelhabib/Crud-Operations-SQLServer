@model IEnumerable<Student>

<h1>Students</h1>

<p>
    <a class="btn btn-success" asp-controller="Student" asp-action="Create">Create New Student</a>
</p>

<!--Search option-->
<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <input type="text"
                   name="searchString"
                   value="@Context.Request.Query["searchString"]"
                   class="form-control"
                   placeholder="Search by Name / Roll / Email" />
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Clear</a>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Roll</th>
            <th>Class</th>
            <th>Email</th>
            <th>IsActive</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Roll</td>
                <td>@student.Class</td>
                <td>@student.Email</td>
                <td>@student.IsActive</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@student.id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Student" asp-action="Delete" asp-route-id="@student.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>